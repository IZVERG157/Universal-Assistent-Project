<Window x:Class="UPA.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UPA"
        mc:Ignorable="d"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStyle="None"
        ResizeMode="CanMinimize"
        Title="UPA" Height="450" Width="800">
    <Window.Resources>
        <SolidColorBrush x:Key="BrightPink" Color="#9f00ab"/>
        <SolidColorBrush x:Key="SoftPink" Color="#ea75ff"/>
        <SolidColorBrush x:Key="AveragePink" Color="#a954b8"/>
        <SolidColorBrush x:Key="DarkPink" Color="#8f489c"/>
        <SolidColorBrush x:Key="MaxDarkPink" Color="#542a5c"/>

        <Style x:Key="PinkGradientTextStyle" TargetType="TextBlock">
            <Setter Property="Foreground">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <LinearGradientBrush.RelativeTransform>
                            <TranslateTransform X="0"/>
                        </LinearGradientBrush.RelativeTransform>
                        <GradientStop Color="#ea75ff" Offset="0"/>
                        <GradientStop Color="#f4b8ff" Offset="0.5"/>
                        <GradientStop Color="#ea75ff" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>

            <Style.Triggers>
                <EventTrigger RoutedEvent="Loaded">
                    <BeginStoryboard>
                        <Storyboard RepeatBehavior="Forever">
                            <DoubleAnimation 
                        Storyboard.TargetProperty="(TextBlock.Foreground).(GradientBrush.RelativeTransform).(TranslateTransform.X)"
                        From="-1" To="1" Duration="0:0:2"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="PinkGradientBorderStyle" TargetType="Border">
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <LinearGradientBrush.RelativeTransform>
                            <TranslateTransform X="0"/>
                        </LinearGradientBrush.RelativeTransform>
                        <GradientStop Color="#ea75ff" Offset="0"/>
                        <GradientStop Color="#f7c9ff" Offset="0.5"/>
                        <GradientStop Color="#ea75ff" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>

            <Style.Triggers>
                <EventTrigger RoutedEvent="Loaded">
                    <BeginStoryboard>
                        <Storyboard RepeatBehavior="Forever">
                            <DoubleAnimation 
                        Storyboard.TargetProperty="(Border.BorderBrush).(GradientBrush.RelativeTransform).(TranslateTransform.X)"
                        From="-1" To="1" Duration="0:0:2"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Style.Triggers>
        </Style>

        <ControlTemplate x:Key="MyTextBoxTemplate" TargetType="TextBox">
            <Border x:Name="borderTextBox" Background="#121212" CornerRadius="6">
                <ScrollViewer x:Name="PART_ContentHost" Margin="5"/>
            </Border>
        </ControlTemplate>

        <ControlTemplate x:Key="LeftButtonTemplate" TargetType="Button">
            <Border x:Name="borderButton" Background="{TemplateBinding Background}" CornerRadius="0, 0, 0, 9">
                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Border>

            <ControlTemplate.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter TargetName="borderButton" Property="Background" Value="{StaticResource AveragePink}"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter TargetName="borderButton" Property="Background" Value="{StaticResource DarkPink}"/>
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>

        <ControlTemplate x:Key="AverageButtonTemplate" TargetType="Button">
            <Border x:Name="borderButton" Background="{TemplateBinding Background}">
                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Border>

            <ControlTemplate.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter TargetName="borderButton" Property="Background" Value="{StaticResource AveragePink}"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter TargetName="borderButton" Property="Background" Value="{StaticResource DarkPink}"/>
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>

        <ControlTemplate x:Key="RightBottomButtonTemplate" TargetType="Button">
            <Border x:Name="borderButton" Background="{TemplateBinding Background}" CornerRadius="9">
                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Border>

            <ControlTemplate.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter TargetName="borderButton" Property="Background" Value="{StaticResource AveragePink}"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter TargetName="borderButton" Property="Background" Value="{StaticResource DarkPink}"/>
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>

        <ControlTemplate x:Key="RightButtonTemplate" TargetType="Button">
            <Border x:Name="borderButton" Background="{TemplateBinding Background}" CornerRadius="0, 0, 9, 0">
                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Border>

            <ControlTemplate.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter TargetName="borderButton" Property="Background" Value="{StaticResource AveragePink}"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter TargetName="borderButton" Property="Background" Value="{StaticResource DarkPink}"/>
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>
    </Window.Resources>

    <Border Style="{StaticResource PinkGradientBorderStyle}" Background="#242424" CornerRadius="12" MouseDown="BorderDrive_MouseDown">
        <Grid>
            <Border x:Name="GeneralBorder" IsEnabled="True">
                <Border.Effect>
                    <BlurEffect Radius="0"/>
                </Border.Effect>
                <Grid>
                    <StackPanel>
                        <Grid Height="24" VerticalAlignment="Top">
                            <Ellipse HorizontalAlignment="Right" VerticalAlignment="Top" Margin="6" Width="12" Height="12" Fill="#ff80a6" MouseLeftButtonDown="Exit_MouseLeftButtonDown"/>
                            <Ellipse HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0 6 24 0" Width="12" Height="12" Fill="#e4b2ff" MouseLeftButtonDown="Collapse_MouseLeftButtonDown"/>
                            <StackPanel Margin="0 1 0 0">
                                <TextBlock Style="{StaticResource PinkGradientTextStyle}" FontFamily="Verdana" Text="Universal Assistent Project" FontSize="14" Margin="0 2" HorizontalAlignment="Center"/>
                                <Border  Style="{StaticResource PinkGradientBorderStyle}" Height="1" Margin="0 1 0 0"/>
                            </StackPanel>
                        </Grid>

                        <Grid x:Name="GridOpenProjectWindow" Visibility="Visible" Height="424">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="619*"/>
                                <ColumnDefinition Width="179*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Style="{StaticResource PinkGradientTextStyle}" FontFamily="Verdana" HorizontalAlignment="Center" VerticalAlignment="Top" Width="170" Text="Click on the top of one of the lists to select" TextWrapping="Wrap" TextAlignment="Center" Grid.Column="1"/>
                            <TextBlock x:Name="textBlockCurrentProject" Style="{StaticResource PinkGradientTextStyle}" FontFamily="Verdana" HorizontalAlignment="Center" VerticalAlignment="Top" Width="170" Text="Current project:" TextWrapping="Wrap" TextAlignment="Center" Grid.Column="1" Margin="0 40 0 0"/>

                            <Border x:Name="ProjectToDoList" MouseLeftButtonDown="ProjectList_MouseLeftButtonDown" CornerRadius="10" Background="#1a1a1a" VerticalAlignment="Top" HorizontalAlignment="Left" Width="300" Height="170" Margin="6 6 0 0">
                                <Grid>
                                    <TextBlock Visibility="Visible" x:Name="textBlockNoTasksFoundProjectToDo" Style="{StaticResource PinkGradientTextStyle}" FontFamily="Verdana" TextAlignment="Center" 
                                    VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="12" TextWrapping="Wrap" Text="No tasks found" Opacity="0.1"/>

                                    <StackPanel>
                                        <TextBlock Style="{StaticResource PinkGradientTextStyle}" FontFamily="Verdana" FontSize="12" Text="To-do" TextAlignment="Center"/>
                                        <Line X1="0" X2="300" Stroke="Black" StrokeThickness="1" Opacity="0.6" Margin="0 2 0 0"/>
                                        <ScrollViewer Height="153" VerticalScrollBarVisibility="Auto">
                                            <ItemsControl x:Name="itemsControlProjectToDoTasks" Padding="0 1 0 5"/>
                                        </ScrollViewer>
                                    </StackPanel>
                                </Grid>
                            </Border>

                            <Border x:Name="ProjectToFixList" MouseLeftButtonDown="ProjectList_MouseLeftButtonDown" CornerRadius="10" Background="#1a1a1a" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="300" Height="170" Margin="6 0 0 70">
                                <Grid>
                                    <TextBlock Visibility="Visible" x:Name="textBlockNoTasksFoundProjectToFix" Style="{StaticResource PinkGradientTextStyle}" FontFamily="Verdana" TextAlignment="Center" 
                                    VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="12" TextWrapping="Wrap" Text="No tasks found" Opacity="0.1"/>

                                    <StackPanel>
                                        <TextBlock Style="{StaticResource PinkGradientTextStyle}" FontFamily="Verdana" FontSize="12" Text="To-fix" TextAlignment="Center"/>
                                        <Line X1="0" X2="300" Stroke="Black" StrokeThickness="1" Opacity="0.6" Margin="0 2 0 0"/>
                                        <ScrollViewer Height="153" VerticalScrollBarVisibility="Auto">
                                            <ItemsControl x:Name="itemsControlProjectToFixTasks" Padding="0 1 0 5"/>
                                        </ScrollViewer>
                                    </StackPanel>
                                </Grid>
                            </Border>

                            <Border x:Name="ProjectMadeList" MouseLeftButtonDown="ProjectList_MouseLeftButtonDown" CornerRadius="10" Background="#1a1a1a" VerticalAlignment="Top" HorizontalAlignment="Right" Width="300" Height="170" Margin="0,6,6,0">
                                <Grid>
                                    <TextBlock Visibility="Visible" x:Name="textBlockNoTasksFoundProjectMade" Style="{StaticResource PinkGradientTextStyle}" FontFamily="Verdana" TextAlignment="Center" 
                                    VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="12" TextWrapping="Wrap" Text="No tasks found" Opacity="0.1"/>

                                    <StackPanel>
                                        <TextBlock Style="{StaticResource PinkGradientTextStyle}" FontFamily="Verdana" FontSize="12" Text="Made" TextAlignment="Center"/>
                                        <Line X1="0" X2="300" Stroke="Black" StrokeThickness="1" Opacity="0.6" Margin="0 2 0 0"/>
                                        <ScrollViewer Height="153" VerticalScrollBarVisibility="Auto">
                                            <ItemsControl x:Name="itemsControlProjectMadeTasks" Padding="0 1 0 5"/>
                                        </ScrollViewer>
                                    </StackPanel>
                                </Grid>
                            </Border>

                            <Border x:Name="ProjectVersionsList" MouseLeftButtonDown="ProjectList_MouseLeftButtonDown" CornerRadius="10" Background="#1a1a1a" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="300" Height="170" Margin="0,0,6,70">
                                <Grid>
                                    <TextBlock Visibility="Visible" x:Name="textBlockNoVersionsFoundProject" Style="{StaticResource PinkGradientTextStyle}" FontFamily="Verdana" TextAlignment="Center" 
                                    VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="12" TextWrapping="Wrap" Text="No versions found" Opacity="0.1"/>

                                    <StackPanel>
                                        <TextBlock Style="{StaticResource PinkGradientTextStyle}" FontFamily="Verdana" FontSize="12" Text="Versions" TextAlignment="Center"/>
                                        <Line X1="0" X2="300" Stroke="Black" StrokeThickness="1" Opacity="0.6" Margin="0 2 0 0"/>
                                        <ScrollViewer Height="153" VerticalScrollBarVisibility="Auto">
                                            <ItemsControl x:Name="itemsControlProjectVersionsList" Padding="0 1 0 5"/>
                                        </ScrollViewer>
                                    </StackPanel>
                                </Grid>
                            </Border>

                            <Border Style="{StaticResource PinkGradientBorderStyle}" Height="1" Width="621" HorizontalAlignment="Center" Margin="0,360,0,62"/>
                            <Border Style="{StaticResource PinkGradientBorderStyle}" Height="424" Width="1" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="2,0,0,0" Grid.Column="1"/>

                            <StackPanel Orientation="Horizontal" Height="50" VerticalAlignment="Bottom" Margin="6 0 0 6" Grid.ColumnSpan="2">
                                <Button Template="{StaticResource LeftButtonTemplate}" Width="203" Background="{StaticResource SoftPink}" RenderOptions.BitmapScalingMode="HighQuality" Click="ProjectOpenSomeListAddSomething_Click">
                                    <Image Source="pack://application:,,,/UPA;component/Assets/add.png" Height="19"/>
                                </Button>
                                <Button Template="{StaticResource AverageButtonTemplate}" Width="203" Background="{StaticResource SoftPink}" RenderOptions.BitmapScalingMode="HighQuality" Click="ProjectEditSomething_Click">
                                    <Image Source="pack://application:,,,/UPA;component/Assets/edit.png" Height="19"/>
                                </Button>
                                <Button Template="{StaticResource RightButtonTemplate}" Width="203" Background="{StaticResource SoftPink}" RenderOptions.BitmapScalingMode="HighQuality" Click="ProjectDeleteSomething_Click">
                                    <Image Source="pack://application:,,,/UPA;component/Assets/bin.png" Height="20"/>
                                </Button>
                                <Button Template="{StaticResource RightBottomButtonTemplate}" Background="{StaticResource SoftPink}" Width="100" Height="50" HorizontalAlignment="Right" VerticalAlignment="Bottom" Content="Back" Margin="78 0 0 0" FontSize="16" FontFamily="Verdana" FontWeight="Bold" Click="BackToMainWindow_Click"/>
                            </StackPanel>
                        </Grid>

                        <StackPanel x:Name="stackPanelMainWindow" Orientation="Horizontal" Height="424" Visibility="Visible">
                            <Grid Width="400">
                                <TextBlock Style="{StaticResource PinkGradientTextStyle}" VerticalAlignment="Top" HorizontalAlignment="Center" FontFamily="Verdana" Text="For open project please double-click by project" Opacity="0.3"/>
                                <Border CornerRadius="10" Background="#1a1a1a" VerticalAlignment="Top" Width="330" Height="384" Margin="0 20 0 20">
                                    <Grid>
                                        <TextBlock Visibility="Visible" x:Name="textBlockNoProjectsFoundProjectsList" Style="{StaticResource PinkGradientTextStyle}" FontFamily="Verdana" TextAlignment="Center" 
                                                   VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="12" TextWrapping="Wrap" Margin="0 0 0 30" Text="No projects found" Opacity="0.1"/>

                                        <StackPanel>
                                            <TextBlock Style="{StaticResource PinkGradientTextStyle}" FontFamily="Verdana" FontSize="12" Text="Projects list" TextAlignment="Center"/>
                                            <Line X1="0" X2="330" Stroke="Black" StrokeThickness="1" Opacity="0.6" Margin="0 2 0 0"/>
                                            <ScrollViewer Height="337" VerticalScrollBarVisibility="Auto">
                                                <ItemsControl x:Name="itemsControlProjectsList" Padding="0 3 0 7"/>
                                            </ScrollViewer>

                                            <StackPanel Orientation="Horizontal" Height="30">
                                                <Button Template="{StaticResource LeftButtonTemplate}" Width="110" Background="{StaticResource SoftPink}" RenderOptions.BitmapScalingMode="HighQuality" Click="OpenProjectsListAddProject_Click">
                                                    <Image Source="pack://application:,,,/UPA;component/Assets/add.png" Height="13"/>
                                                </Button>
                                                <Button Template="{StaticResource AverageButtonTemplate}" Width="110" Background="{StaticResource SoftPink}" RenderOptions.BitmapScalingMode="HighQuality" Click="OpenProjectsListEditProject_Click">
                                                    <Image Source="pack://application:,,,/UPA;component/Assets/edit.png" Height="13"/>
                                                </Button>
                                                <Button Template="{StaticResource RightButtonTemplate}" Width="110" Background="{StaticResource SoftPink}" RenderOptions.BitmapScalingMode="HighQuality" Click="ProjectsListDeleteProject_Click">
                                                    <Image Source="pack://application:,,,/UPA;component/Assets/bin.png" Height="14"/>
                                                </Button>
                                            </StackPanel>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </Grid>
                            <Grid Width="398">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="341*"/>
                                    <ColumnDefinition Width="57*"/>
                                </Grid.ColumnDefinitions>
                                <Border CornerRadius="10" Background="#1a1a1a" VerticalAlignment="Top" Width="300" Height="170" Margin="49,20,49,0" Grid.ColumnSpan="2">
                                    <Grid>
                                        <TextBlock Visibility="Visible" x:Name="textBlockNoTasksFoundMainProjectMade" Style="{StaticResource PinkGradientTextStyle}" FontFamily="Verdana" TextAlignment="Center" 
                                        VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="12" TextWrapping="Wrap" Text="No tasks found" Opacity="0.1"/>

                                        <StackPanel>
                                            <TextBlock Style="{StaticResource PinkGradientTextStyle}" FontFamily="Verdana" FontSize="12" Text="Made list" TextAlignment="Center"/>
                                            <Line X1="0" X2="300" Stroke="Black" StrokeThickness="1" Opacity="0.6" Margin="0 2 0 0"/>
                                            <ScrollViewer Height="153" VerticalScrollBarVisibility="Auto">
                                                <ItemsControl x:Name="itemsControlMainProjectMadeTasks" Padding="0 3 0 7"/>
                                            </ScrollViewer>
                                        </StackPanel>
                                    </Grid>
                                </Border>

                                <Border CornerRadius="10" Background="#1a1a1a" VerticalAlignment="Bottom" Width="300" Height="200" Margin="49,0,49,20" Grid.ColumnSpan="2">
                                    <Grid>
                                        <TextBlock Visibility="Visible" x:Name="textBlockNoTasksFoundMasterToDo" Style="{StaticResource PinkGradientTextStyle}" FontFamily="Verdana" TextAlignment="Center" 
                                                   VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="12" TextWrapping="Wrap" Margin="0 0 0 25" Text="No tasks found" Opacity="0.1"/>

                                        <StackPanel>
                                            <TextBlock Style="{StaticResource PinkGradientTextStyle}" FontFamily="Verdana" FontSize="12" Text="Master to-do" TextAlignment="Center"/>
                                            <Line X1="0" X2="300" Stroke="Black" StrokeThickness="1" Opacity="0.6" Margin="0 2 0 0"/>
                                            <ScrollViewer Height="153" VerticalScrollBarVisibility="Auto">
                                                <ItemsControl x:Name="itemsControlMasterToDoTasks" Padding="0 1 0 5"/>
                                            </ScrollViewer>

                                            <StackPanel Orientation="Horizontal" Height="30">
                                                <Button Template="{StaticResource LeftButtonTemplate}" Width="100" FontSize="19" Background="{StaticResource SoftPink}" RenderOptions.BitmapScalingMode="HighQuality" Click="OpenMasterToDoAddTask_Click">
                                                    <Image Source="pack://application:,,,/UPA;component/Assets/add.png" Height="13"/>
                                                </Button>
                                                <Button Template="{StaticResource AverageButtonTemplate}" Width="100" FontSize="10" Background="{StaticResource SoftPink}" RenderOptions.BitmapScalingMode="HighQuality" Click="OpenMasterToDoEditTask_Click">
                                                    <Image Source="pack://application:,,,/UPA;component/Assets/edit.png" Height="13"/>
                                                </Button>
                                                <Button Template="{StaticResource RightButtonTemplate}" Width="100" FontSize="20" Background="{StaticResource SoftPink}" RenderOptions.BitmapScalingMode="HighQuality" Click="MasterToDoDeleteTask_Click">
                                                    <Image Source="pack://application:,,,/UPA;component/Assets/bin.png" Height="14"/>
                                                </Button>
                                            </StackPanel>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </Grid>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Border>

            <Border x:Name="borderMasterToDoAddTask"  Visibility="Collapsed" CornerRadius="10" Background="#1a1a1a" VerticalAlignment="Center" Width="330" Height="300">
                <Border.Effect>
                    <DropShadowEffect ShadowDepth="0"  BlurRadius="15"/>
                </Border.Effect>

                <StackPanel>
                    <TextBlock Style="{StaticResource PinkGradientTextStyle}" FontFamily="Verdana" FontSize="12" Text="Master to-do (Add task)" TextAlignment="Center"/>
                    <Line X1="0" X2="330" Stroke="Black" StrokeThickness="1" Opacity="0.6" Margin="0 2 0 0"/>
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <Grid Height="253">
                            <TextBox x:Name="textBoxMasterToDoTextAddTask" Template="{StaticResource MyTextBoxTemplate}" TextAlignment="Center" Foreground="White" CaretBrush="White" FontFamily="Verdana" TextWrapping="Wrap" Margin="5 5 5 7"/>
                        </Grid>
                    </ScrollViewer>

                    <StackPanel Orientation="Horizontal" Height="30">
                        <Button Template="{StaticResource LeftButtonTemplate}" Width="165" FontSize="19" Background="{StaticResource SoftPink}" RenderOptions.BitmapScalingMode="HighQuality" Click="AcceptMasterToDoAddTask_Click">
                            <Image Source="pack://application:,,,/UPA;component/Assets/accept.png" Height="15"/>
                        </Button>
                        <Button Template="{StaticResource RightButtonTemplate}" Width="165" FontSize="20" Background="{StaticResource SoftPink}" RenderOptions.BitmapScalingMode="HighQuality" Click="CancelMasterToDoAddTask_Click">
                            <Image Source="pack://application:,,,/UPA;component/Assets/cancel.png" Height="18"/>
                        </Button>
                    </StackPanel>
                </StackPanel>
            </Border>
            <Border x:Name="borderMasterToDoEditTask"  Visibility="Collapsed" CornerRadius="10" Background="#1a1a1a" VerticalAlignment="Center" Width="330" Height="300">
                <Border.Effect>
                    <DropShadowEffect ShadowDepth="0"  BlurRadius="15"/>
                </Border.Effect>

                <StackPanel>
                    <TextBlock Style="{StaticResource PinkGradientTextStyle}" FontFamily="Verdana" FontSize="12" Text="Master to-do (Edit task)" TextAlignment="Center"/>
                    <Line X1="0" X2="330" Stroke="Black" StrokeThickness="1" Opacity="0.6" Margin="0 2 0 0"/>
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <Grid Height="253">
                            <TextBox x:Name="textBoxMasterToDoTextEditTask" Template="{StaticResource MyTextBoxTemplate}" TextAlignment="Center" Foreground="White" CaretBrush="White" FontFamily="Verdana" TextWrapping="Wrap" Margin="5 5 5 7"/>
                        </Grid>
                    </ScrollViewer>

                    <StackPanel Orientation="Horizontal" Height="30">
                        <Button Template="{StaticResource LeftButtonTemplate}" Width="165" FontSize="19" Background="{StaticResource SoftPink}" RenderOptions.BitmapScalingMode="HighQuality" Click="AcceptMasterToDoEditTask_Click">
                            <Image Source="pack://application:,,,/UPA;component/Assets/accept.png" Height="15"/>
                        </Button>
                        <Button Template="{StaticResource RightButtonTemplate}" Width="165" FontSize="20" Background="{StaticResource SoftPink}" RenderOptions.BitmapScalingMode="HighQuality" Click="CancelMasterToDoEditTask_Click">
                            <Image Source="pack://application:,,,/UPA;component/Assets/cancel.png" Height="18"/>
                        </Button>
                    </StackPanel>
                </StackPanel>
            </Border>

            <Border x:Name="borderProjectListAddProject"  Visibility="Collapsed" CornerRadius="10" Background="#1a1a1a" VerticalAlignment="Center" Width="330" Height="300">
                <Border.Effect>
                    <DropShadowEffect ShadowDepth="0"  BlurRadius="15"/>
                </Border.Effect>

                <StackPanel>
                    <TextBlock Style="{StaticResource PinkGradientTextStyle}" FontFamily="Verdana" FontSize="12" Text="Projects list (Add project)" TextAlignment="Center"/>
                    <Line X1="0" X2="330" Stroke="Black" StrokeThickness="1" Opacity="0.6" Margin="0 2 0 0"/>
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            <TextBlock FontFamily="Verdana" Foreground="White" FontSize="10" Margin="5 5 5 0" TextWrapping="Wrap" Text="Project name:"/>
                            <TextBox x:Name="textBoxProjectsListAddProjectName" Template="{StaticResource MyTextBoxTemplate}" Foreground="White" CaretBrush="White" FontFamily="Verdana" TextWrapping="Wrap" Margin="5 5 5 0"/>
                            <TextBlock FontFamily="Verdana" Foreground="White" FontSize="10" Margin="5 5 5 0" TextWrapping="Wrap" Text="Project description:"/>
                            <TextBox x:Name="textBoxProjectsListAddProjectDescription" Text="This field is not required" Template="{StaticResource MyTextBoxTemplate}" Height="100" Foreground="White" CaretBrush="White" FontFamily="Verdana" TextWrapping="Wrap" Margin="5 5 5 7"/>
                        </StackPanel>
                    </ScrollViewer>

                    <StackPanel Orientation="Horizontal" Height="30" Margin="0 77 0 0">
                        <Button Template="{StaticResource LeftButtonTemplate}" Width="165" FontSize="19" Background="{StaticResource SoftPink}" RenderOptions.BitmapScalingMode="HighQuality" Click="AcceptProjectsListAddProject_Click">
                            <Image Source="pack://application:,,,/UPA;component/Assets/accept.png" Height="15"/>
                        </Button>
                        <Button Template="{StaticResource RightButtonTemplate}" Width="165" FontSize="20" Background="{StaticResource SoftPink}" RenderOptions.BitmapScalingMode="HighQuality" Click="CancelProjectsListAddProject_Click">
                            <Image Source="pack://application:,,,/UPA;component/Assets/cancel.png" Height="18"/>
                        </Button>
                    </StackPanel>
                </StackPanel>
            </Border>
            <Border x:Name="borderProjectListEditProject"  Visibility="Collapsed" CornerRadius="10" Background="#1a1a1a" VerticalAlignment="Center" Width="330" Height="300">
                <Border.Effect>
                    <DropShadowEffect ShadowDepth="0"  BlurRadius="15"/>
                </Border.Effect>

                <StackPanel>
                    <TextBlock Style="{StaticResource PinkGradientTextStyle}" FontFamily="Verdana" FontSize="12" Text="Projects list (Edit project)" TextAlignment="Center"/>
                    <Line X1="0" X2="330" Stroke="Black" StrokeThickness="1" Opacity="0.6" Margin="0 2 0 0"/>
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            <TextBlock FontFamily="Verdana" Foreground="White" FontSize="10" Margin="5 5 5 0" TextWrapping="Wrap" Text="Project name:"/>
                            <TextBox x:Name="textBoxProjectsListEditProjectName" Template="{StaticResource MyTextBoxTemplate}" Foreground="White" CaretBrush="White" FontFamily="Verdana" TextWrapping="Wrap" Margin="5 5 5 0"/>
                            <TextBlock FontFamily="Verdana" Foreground="White" FontSize="10" Margin="5 5 5 0" TextWrapping="Wrap" Text="Project description:"/>
                            <TextBox x:Name="textBoxProjectsListEditProjectDescription" Template="{StaticResource MyTextBoxTemplate}" Height="100" Foreground="White" CaretBrush="White" FontFamily="Verdana" TextWrapping="Wrap" Margin="5 5 5 7"/>
                        </StackPanel>
                    </ScrollViewer>

                    <StackPanel Orientation="Horizontal" Height="30" Margin="0 77 0 0">
                        <Button Template="{StaticResource LeftButtonTemplate}" Width="165" FontSize="19" Background="{StaticResource SoftPink}" RenderOptions.BitmapScalingMode="HighQuality" Click="AcceptProjectsListEditProject_Click">
                            <Image Source="pack://application:,,,/UPA;component/Assets/accept.png" Height="15"/>
                        </Button>
                        <Button Template="{StaticResource RightButtonTemplate}" Width="165" FontSize="20" Background="{StaticResource SoftPink}" RenderOptions.BitmapScalingMode="HighQuality" Click="CancelProjectsListEditProject_Click">
                            <Image Source="pack://application:,,,/UPA;component/Assets/cancel.png" Height="18"/>
                        </Button>
                    </StackPanel>
                </StackPanel>
            </Border>

            <Border x:Name="borderProjectSomeListAddSomething"  Visibility="Collapsed" CornerRadius="10" Background="#1a1a1a" VerticalAlignment="Center" Width="330" Height="300">
                <Border.Effect>
                    <DropShadowEffect ShadowDepth="0"  BlurRadius="15"/>
